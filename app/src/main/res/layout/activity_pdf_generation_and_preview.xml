<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/main">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/preview_PDF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="@color/black"
        android:background="@color/green_accent"/>

    <TextView
        android:id="@+id/tvPdfPreviewStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/status_generating_and_loading_pdf_preview"
        android:textColor="@color/black"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>

    <RadioGroup
        android:id="@+id/rgPdfStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/search_background"
        android:layout_marginTop="8dp"
        android:padding="8dp">

        <RadioButton
            android:id="@+id/rbOriginal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/original"
            android:checked="true"
            android:layout_marginEnd="16dp"
            app:buttonTint="@color/green_accent"
            android:textColor="@color/black"/>

        <RadioButton
            android:id="@+id/rbBlackWhite2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/black_and_white"
            app:buttonTint="@color/green_accent"
            android:textColor="@color/black"/>
        <RadioButton
            android:id="@+id/rbBlackWhite1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pro"
            app:buttonTint="@color/green_accent"
            android:textColor="@color/black"/>
    </RadioGroup>

    <ImageView
        android:id="@+id/ivPdfPreview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:background="@color/main"
        android:padding="4dp"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/vien_den"
        android:gravity="center"
        android:padding="16dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDeletePdf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/delete_and_cancel"
            android:background="@drawable/vien_den"
            android:textColor="@color/black"
            android:layout_marginEnd="8dp"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSavePdf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/save_PDF"
            android:background="@drawable/login_background"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>