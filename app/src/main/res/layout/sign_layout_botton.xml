<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/vien_den"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chữ ký của bạn"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp">

            <ImageButton
                android:id="@+id/btnAddSign"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/add_signature_background"
                android:src="@android:drawable/ic_input_add"
                android:scaleType="centerInside"
                android:contentDescription="Thêm chữ ký mới" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"
                android:gravity="center" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSigns"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

    </LinearLayout>

    <!-- Placeholder khi không có chữ ký -->
    <TextView
        android:id="@+id/tvNoSignatures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chưa có chữ ký nào. Nhấn 'Thêm' để tạo chữ ký đầu tiên."
        android:textSize="12sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

</LinearLayout>