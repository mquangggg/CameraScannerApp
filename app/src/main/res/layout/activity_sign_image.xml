<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/edit_signature"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/green_accent"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:background="@color/black">

        <ImageView
            android:id="@+id/imageViewPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter" />

        <com.example.camerascanner.activitysignature.signatureview.signature.SignatureView
            android:id="@+id/signatureOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />

    </FrameLayout>

    <!-- Color Picker Section với AmbilWarna -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@drawable/vien_den"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Màu chữ ký:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginEnd="12dp" />

        <!-- Color Preview Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnColorPicker"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/color_preview_button"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/tvColorHex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="#000000"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:gravity="center" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.25"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/btnCancelImageSign"
            android:layout_width="68dp"
            android:layout_height="60dp"
            android:layout_marginStart="48dp"
            android:background="@drawable/ic_cancel"
            android:contentDescription="Cancel"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.75" />

        <ImageButton
            android:id="@+id/btnYesImageSign"
            android:layout_width="62dp"
            android:layout_height="61dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/ic_done"
            android:contentDescription="Done"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>