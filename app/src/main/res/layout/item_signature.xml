<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_margin="4dp"
    android:background="@drawable/signature_item_background"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/imageViewSignature"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:scaleType="fitCenter"
        android:background="@android:color/white"
        android:padding="4dp" />

    <ImageButton
        android:id="@+id/btnDeleteSignature"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/circle_red_background"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:scaleType="centerInside"
        android:padding="2dp"
        android:contentDescription="Xóa chữ ký" />

</RelativeLayout>