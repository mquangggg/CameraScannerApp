<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Thumbnail ảnh OCR -->
        <ImageView
            android:id="@+id/ivOcrThumbnail"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_home_white"
            android:background="@drawable/rounded_background" />

        <!-- Thông tin cặp OCR -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tvOcrImageFileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên file ảnh"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvOcrTextFileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên file văn bản"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvOcrDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày tạo"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvOcrTotalSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tổng kích thước"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Nút hành động -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <!-- Edit button -->
            <ImageView
                android:id="@+id/btnEditOcrItem"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Sửa tên file OCR"
                android:padding="8dp"
                android:src="@drawable/ic_edit_white"
                android:scaleType="centerInside" />

            <!-- Share button -->
            <ImageView
                android:id="@+id/btnShareOcrItem"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Share OCR pair"
                android:padding="8dp"
                android:src="@drawable/ic_share_white"
                android:scaleType="centerInside" />

            <ImageView
                android:id="@+id/btnDeleteOcrItem"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_delete_white"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:contentDescription="Xóa cặp OCR" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>