<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitycamera.CameraActivity">

    <TextView
        android:id="@+id/textViewCameraTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/camera_scanner"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:background="@color/green_accent"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.camera.view.PreviewView

        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewCameraTitle"
        app:layout_constraintBottom_toTopOf="@id/bottom_controls_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rounded_corner_background"
        />
    <com.example.camerascanner.activitycamera.CustomOverlayView
        android:id="@+id/customOverlayView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/previewView"
        app:layout_constraintBottom_toBottomOf="@id/previewView"
        app:layout_constraintStart_toStartOf="@id/previewView"
        app:layout_constraintEnd_toEndOf="@id/previewView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewCameraTitle"
        app:layout_constraintBottom_toTopOf="@id/bottom_controls_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitCenter"
        android:background="@drawable/rounded_corner_background"
        android:src="@drawable/ic_launcher_foreground"
        android:visibility="gone"
        android:clipToOutline="true" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_controls_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutCameraModes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/bottom_controls_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tabMode="scrollable"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/green_accent"
        app:tabSelectedTextColor="@color/green_accent"
        app:tabTextColor="@color/black"
        android:background="@color/main"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scan_camera" />
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/id_card"
            />
    </com.google.android.material.tabs.TabLayout>


    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/bottom_controls_guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/grey_text_icon"
        android:padding="8dp">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnTakePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:backgroundTint="@color/green_accent"
            android:src="@drawable/ic_camera_white" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnSelectImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="30dp"
            android:background="@drawable/gallery_with_round"
            android:clipToOutline="true"
            android:scaleType="centerInside"
            android:src="@drawable/gallery"
           />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>